  },
  "POST /api/articles/:articleId/comments": {
    "description": "adds a comment for a specific article by its ID.",
    "queries": [],
    "requestBody": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "article_id": 1,
        "username": "user1",
        "body": "Great article!",
